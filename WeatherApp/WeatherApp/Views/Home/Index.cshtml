@model List<CityWeather>

@{
    ViewBag.Title = "Web Weather";
}

@{
    string defineColor(double temperature){
        if(temperature > 74){
            return "orange-back";
        } else if(temperature < 44){
            return "blue-back";
        } else {
            return "green-back";
        }
    }
}

<!DOCTYPE html>
<html>

 <head>
  <meta charset="utf-8" lang="en" />
  <link href="~/StyleSheet.css" rel="stylesheet" />
  <title>@ViewBag.Title</title>
 </head>

 <body>
  <div class="navbar">
   <a href="/" class="navbar-brand">Weather</a>   
  </div>
  <div class="container background-image">
   <div class="page-content">
    <div class="flex">
     @foreach (CityWeather city in Model)
     {
      <div class="text-left flex-borderless w-25 margin-auto margin-top-200 @defineColor(city.TemperatureFahrenheit)">
       <div class="w-50 inline-block">
        <div>
         <h3>@city.CityName</h3>
        </div>  
        <div class="text-dark-grey">
         <h4>@city.DateAndTime.ToString("hh:mm tt")</h4>
        </div> 
        <div>
         <a href="~/weather/@city.CityUniqueCode" class="margin-top">Details</a>
        </div>
       </div>
       <div class="w-50 inline-block border-left text-center">
        <h2>
         @city.TemperatureFahrenheit 
         <sup class="text-grey">ºF</sup>
        </h2>
       </div>
      </div>
     }
    </div>
   </div>
   </div>
  <div class="footer-content">
      Weather app Copyright &copy; 2023 rights reserved.
  </div>
 </body>
</html>